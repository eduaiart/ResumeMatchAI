# Environment variables for Google Cloud App Engine
# Copy this file to .env.yaml and update with your actual values

env_variables:
  # Database connection string for Cloud SQL
  # Replace with your actual database credentials
  DATABASE_URL: "postgresql://appuser:YOUR_DB_PASSWORD@/resumematchai?host=/cloudsql/YOUR_PROJECT_ID:us-central1:resume-db"
  
  # Session secret key - generate a random string
  SESSION_SECRET: "your-super-secret-session-key-change-this-to-random-string"
  
  # Flask environment
  FLASK_ENV: "production"